---
import data from '../data/data.json'
import Links from '../components/Links.astro';
const nav = data.nav
---

<nav>
  <ul>
    {nav.map((item) => (
      <li>
        <a href={item.url}>
          {item.icon ? <img src={item.icon} alt={item.name} /> : <span class="nav__li">{item.name}</span>}
        </a>
      </li>
    ))}
  </ul>
  <Links />
</nav>


<style lang="sass">
  nav
    padding: 1rem
    display: flex
    flex-direction: column
    align-items: center

    @media (min-width: 375px)
      align-items: flex-start

    @media (min-width: 768px)
      flex-direction: row
      align-items: center

    img
      width: 30px

    ul
      display: flex
      flex-direction: column
      align-items: center
      margin-bottom: 1rem

      @media (min-width: 375px)
        margin-right: auto
        flex-direction: row
        margin-bottom: 0.5rem

      @media (min-width: 768px)
        margin-bottom: 0
        
    li
      list-style: none
      font-size: 0.9rem
      font-weight: 700
      text-transform: uppercase

      & + *
        margin-top: 0.5rem
        @media (min-width: 375px)
          margin-top: 0
          margin-left: 1rem

    a
      text-decoration: none
      transition: all 0.2s ease-in-out
      color: #333

      &:hover
        color: #555
</style>