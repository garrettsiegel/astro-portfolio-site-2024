---
import data from '../data/data.json'
import Links from '../components/Links.astro';
const nav = data.nav
---

<nav>
  <ul>
    {nav.map((item) => (
      <li>
        <a href={item.url}>
          {item.icon ? <img src={item.icon} alt={item.name} /> : <span class="nav__li">{item.name}</span>}
        </a>
      </li>
    ))}
  </ul>
  <Links />
</nav>


<style lang="sass">
  nav
    padding: 1rem
    display: flex
    align-items: center

    img
      width: 30px

    ul
      display: flex
      align-items: center
      margin-right: auto

    li
      list-style: none

    
      & + *
        margin-left: 1rem
</style>