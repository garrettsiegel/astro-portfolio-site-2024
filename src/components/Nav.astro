---
import data from '../data/data.json'
import Links from '../components/Links.astro';
const nav = data.nav
---

<nav>
  <ul>
    {nav.map((item) => (
      <a href={item.url}>
        {item.icon ? <li><img src={item.icon} alt={item.name} /></li> : <li>{item.name}</li>}
      </a>
    ))}
  </ul>
  <Links />
</nav>


<style lang="sass">
  nav
    padding: 1rem
    display: flex
    flex-direction: column
    align-items: center

    @media (min-width: 375px)
      align-items: flex-start

    @media (min-width: 768px)
      flex-direction: row
      align-items: center

    img
      width: 30px

    ul
      display: flex
      flex-direction: column
      align-items: center
      margin-bottom: 1rem

      @media (min-width: 375px)
        margin-right: auto
        flex-direction: row
        margin-bottom: 0.5rem

      @media (min-width: 768px)
        margin-bottom: 0
        
    li
      list-style: none
      font-size: 0.9rem
      font-weight: 900
      text-transform: uppercase

    a
      & + *
        margin-top: 0.5rem
        @media (min-width: 375px)
          margin-top: 0
          margin-left: 1rem

    
</style>