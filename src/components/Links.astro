---
import GithubIcon from '../components/logos/github.astro'
import LinkedInIcon from '../components/logos/linkedin.astro'
import CodepenIcon from '../components/logos/codepen.astro'
import BehanceIcon from '../components/logos/behance.astro'
import UpworkIcon from '../components/logos/upwork.astro'
import TwitterIcon from '../components/logos/twitter.astro'

const links = [
    {
      "label": "Github",
      "url": "https://github.com/garrettsiegel",
      "icon": GithubIcon,
      "alt": "Github icon"
    },
    {
      "label": "LinkedIn",
      "url": "https://www.linkedin.com/in/garrettsiegel/",
      "icon": LinkedInIcon,
      "alt": "LinkedIn icon"
    },
    {
      "label": "Codepen",
      "url": "https://codepen.io/garrettsiegel/pens/public",
      "icon": CodepenIcon,
      "alt": "Codepen icon"
    },
    {
      "label": "Behance",
      "url": "https://www.behance.net/gsiegel",
      "icon": BehanceIcon,
      "alt": "Behance icon"
    },
    {
      "label": "Upwork",
      "url": "https://www.upwork.com/freelancers/garrettsubmurged",
      "icon": UpworkIcon,
      "alt": "Upwork icon"
    },
    {
      "label": "Twitter / X",
      "url": "https://twitter.com/garrettDoesCode",
      "icon": TwitterIcon,
      "alt": "Twitter/X icon"
    }    
  ]
---

<div class="links">
  <ul>
    {links.map((link) => (
      <li class="link">
        <a href={link.url} target="_blank" aria-label="Descriptive text about the link" rel="noopener noreferrer">
          <link.icon />
          <span class="visually-hidden">{link.alt}</span>
        </a>
      </li>
    ))}
  </ul>
</div>


<style lang="sass" is:global>
  .links
    ul
      display: flex
      align-items: center
      list-style: none

  .link
    & + *
      margin-left: 1rem

    

    &__label
      display: none

  .visually-hidden
    position: absolute
    width: 1px
    height: 1px
    margin: -1px
    padding: 0
    overflow: hidden
    clip: rect(0, 0, 0, 0)
    border: 0
    white-space: nowrap
</style>