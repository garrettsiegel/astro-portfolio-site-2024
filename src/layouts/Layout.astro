---
import Nav from '../components/Nav.astro'
import Footer from '../components/Footer.astro'
import GoogleAnalytics from '../components/GoogleAnalytics.astro'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<GoogleAnalytics />
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&amp;family=Syne:wght@400;500;700;800&amp;display=swap" rel="stylesheet">
		<title>{title} - Garrett Siegel - Front-End Web Developer / Visual Designer</title>
	</head>
	
	<body>
		<Nav />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>


<style is:global lang="sass">
	*
		font-family: Inter, sans-serif
		font-weight: 400
		font-size: 1rem
		margin: 0
		padding: 0
		box-sizing: border-box

	:is(h1)
		font-family: syne, sans-serif
		font-weight: 800
		text-transform: uppercase

	:is(h2, h3, h4, h5, h6)
		font-family: Inter, sans-serif
		font-weight: 900

	h2
		font-size: 2rem
		text-transform: uppercase

	section
		max-width: 700px
		margin-inline: auto
		margin-block: 1rem

	img
		max-width: 100%

	.btn
		background-color: #0C264C
		color: white
		padding: 0.75rem 1.25rem
		border-radius: 0.5rem
		letter-spacing: 1px
		transition: all 0.2s ease-in-out

		&:hover
			background-color: #B0B7BC
			color: white

	a
		display: inline-block
		font-weight: 900
		text-decoration: none
		transition: all 0.2s ease-in-out
		color: #333

		&:hover
			color: #555

		.visually-hidden
			position: absolute
			width: 1px
			height: 1px
			margin: -1px
			padding: 0
			overflow: hidden
			clip: rect(0, 0, 0, 0)
			border: 0
			white-space: nowrap

	section
		& > *
			margin-top: 1rem
</style>