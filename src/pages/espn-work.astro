<style lang="sass">
  .scrolltrig
    position: relative
    height: 100vh
    background-color: black
    overflow: hidden

    video
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      z-index: 999
      max-width: 300px
      border: 50px solid black
      border-radius: 50%

    
      

    h1
